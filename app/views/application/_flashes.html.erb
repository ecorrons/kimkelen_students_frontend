<div class="flashes">
  <%- flash.each do |name, msg| %>
    <%= content_tag :div, class: "alert alert-#{ name == 'alert' ? 'danger' : 'success' } alert-dismissable" do -%>
      <div class="container">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg.html_safe %>
      </div>
    <% end -%>
  <% end -%>
</div>