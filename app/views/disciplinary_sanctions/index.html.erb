<div class="col-md-12">
  <h2>Sanciones Disciplinarias</h2>

  <ul class="nav nav-tabs" style="margin-bottom: 15px;">
      <% @school_years.each do |school_year|%>
        <li class="active"><a class="set-school-year" href="#" data-toggle="tab"><%= school_year['year']%></a></li>
      <%-end-%>
  </ul>

  <%= form_tag(disciplinary_sanctions_path, method: "get", class: 'school_year_form') do %>
    <%= hidden_field_tag :school_year  %>
  <%-end-%>

  <div class="">
    <h4><strong> Total de inasistencias: <%= @disciplinary_sanctions["total_disciplinary_sanctions"]%></strong></h4>
  </div>
  
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
       <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr class="success">
              <th>Fecha inicio</th>
              <th>Fecha fin</th>
              <th>Valor</th>
              <th>Número</th>
              <th>Tipo de sanción disciplinaria</th>
            </tr>
          </thead>
          <tbody>
            <% @disciplinary_sanctions['disciplinary_sanctions'].each do |disciplinary_sanction| %>
            <tr>
              <td><%= I18n.l disciplinary_sanction['request_date'].to_date unless disciplinary_sanction['request_date'].nil?%></td>
              <td><%= I18n.l disciplinary_sanction['resolution_date'].to_date unless disciplinary_sanction['resolution_date'].nil? %></td>
              <td><%= disciplinary_sanction['value'] %></td>
              <td><%= disciplinary_sanction['number'] %></td>
              <td><%= disciplinary_sanction['disciplinary_sanction_type'] %></td>
            </tr>
            <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
