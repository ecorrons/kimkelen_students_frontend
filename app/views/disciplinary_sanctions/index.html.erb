<div class="col-md-12">
  <div class="page-header">
    <h2>Sanciones disciplinarias <small> | <%= @person.firstname %> <%= @person.lastname %> - año lectivo <%= @school_year %></h1></small></h2>
  </div>

  <%= render partial: "shared/school_years_tabs", locals: { school_years: @school_years, school_year: @school_year } %>

  <%= form_tag(disciplinary_sanctions_path, method: "get", id: 'school_year_form') do %>
    <%= hidden_field_tag :school_year  %>
  <%-end-%>

  <div class="table-header">
    <h5><strong>Total de sanciones: <%= @disciplinary_sanctions["total_disciplinary_sanctions"] %></strong></h5>
  </div>

  <% unless @disciplinary_sanctions["total_disciplinary_sanctions"].zero? %>
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
       <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr class="success">
              <th>Fecha inicio</th>
              <th>Fecha fin</th>
              <th>Valor</th>
              <th>Número</th>
              <th>Tipo de sanción disciplinaria</th>
            </tr>
          </thead>
          <tbody>
            <% @disciplinary_sanctions['disciplinary_sanctions'].each do |disciplinary_sanction| %>
            <tr>
              <td><%= I18n.l disciplinary_sanction['request_date'].to_date unless disciplinary_sanction['request_date'].nil?%></td>
              <td><%= I18n.l disciplinary_sanction['resolution_date'].to_date unless disciplinary_sanction['resolution_date'].nil? %></td>
              <td><%= disciplinary_sanction['value'] %></td>
              <td><%= disciplinary_sanction['number'] %></td>
              <td><%= disciplinary_sanction['disciplinary_sanction_type'] %></td>
            </tr>
            <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
</div>
