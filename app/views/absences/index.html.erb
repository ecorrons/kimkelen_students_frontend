<div class="col-md-12">
  <h2>Inasistencias</h2>

  <ul class="nav nav-tabs" style="margin-bottom: 15px;">
      <% @school_years.each do |school_year|%>
        <li class="active"><a class="set-school-year" href="#" data-toggle="tab"><%= school_year['year']%></a></li>
      <%-end-%>
  </ul>

  <%= form_tag(absences_path, method: "get", class: 'school_year_form') do %>
    <%= hidden_field_tag :school_year  %>
  <%-end-%>

  <div class="">
    <h4><strong> Total de inasistencias: <%= @absences["total_absences"]%></strong></h4>
  </div>
  
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="home">
       <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr class="success">
              <th>Tipo</th>
              <th>Falta</th>
              <th>Fecha</th>
            </tr>
          </thead>
          <tbody>
            <% @absences['absences'].each do |absence|%>
            <tr>
              <td><%= absence['absence_type'] %></td>
              <td><%= absence['value'] %></td>
              <td><%= I18n.l absence['day'].to_date %></td>
            </tr>
            <%end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
